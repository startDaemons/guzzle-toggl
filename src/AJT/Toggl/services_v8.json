{
    "name": "Toggl",
    "apiVersion": "v8",
    "description": "Toggl API v8",
    "operations": {
        "GetWorkspaces": {
            "httpMethod": "GET",
            "uri": "workspaces",
            "summary": "Get workspaces"
        },
        "GetClients": {
            "httpMethod": "GET",
            "uri": "clients",
            "summary": "Get clients"
        },
        "GetProjects": {
            "httpMethod": "GET",
            "uri": "projects",
            "summary": "Get projects"
        },
        "GetWorkspaceUsers": {
            "httpMethod": "GET",
            "uri": "workspaces/{workspace-id}/users",
            "summary": "Get workspace users",
            "parameters": {
                "workspace-id": {
                    "location": "uri",
                    "description": "Workspace ID",
                    "required": true,
                    "type": "integer"
                }
            }
        },
        "CreateProject" : {
            "httpMethod" : "POST",
            "uri": "projects",
            "summary" : "Create a project"
        }
    }
}